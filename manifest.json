{
    "name": "Bookmark Alias",
    "version": "1.0",
    "description": "Shortcuts!",
    "omnibox": {
        "keyword": "ba"
    },
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "permissions": [
        "declarativeContent",
        "tabs",
        "storage",
        "activeTab"
    ],
    "page_action": {
        "default_popup": "popup.html"
    },
    "content_scripts": [{
        "matches": ["*://*/"],
        "js": ["index.js"]
    }],
    "manifest_version": 2
}